@model NewTask

<div class="container mt-4" style="max-width: 600px;">
    <form asp-action="AddEditTask" method="post" class="row g-3">
        <input type="hidden" asp-for="Id" />

        <!-- Task Name -->
        <div class="row">
            <div class="col-12">
                <label asp-for="TaskName" class="form-label">Task Name</label>
                <input type="text" asp-for="TaskName" class="form-control" required />
            </div>
        </div>

        <br />

        <!-- Due Date -->
        <div class="row">
            <div class="col-12">
                <label asp-for="DueDate" class="form-label">Due Date</label>
                <input type="datetime-local" asp-for="DueDate" class="form-control"
                       value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
            </div>
        </div>

        <br />

        <!-- Quadrant -->
        <div class="row">
            <div class="col-12">
                <label asp-for="Quadrant" class="form-label">Quadrant</label>
                <select asp-for="Quadrant" class="form-select" required>
                    <option value="">Select Quadrant</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>

        <br />

        <!-- Category -->
        <div class="row">
            <div class="col-12">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select" required>
                    <option value="">Select Category</option>

                    <!-- Loop through categories passed from ViewBag -->
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
        </div>

        <br />

        <!-- Completed -->
        <div class="row">
            <div class="col-12">
                <label class="form-label">Completed?</label>
                <div class="form-check">
                    <input type="radio" asp-for="Completed" value="true" id="CompletedYes" class="form-check-input" required>
                    <label for="CompletedYes" class="form-check-label">Yes</label>
                </div>
                <div class="form-check">
                    <input type="radio" asp-for="Completed" value="false" id="CompletedNo" class="form-check-input" checked required>
                    <label for="CompletedNo" class="form-check-label">No</label>
                </div>
            </div>
        </div>

        <br />

        <!-- Submit Button -->
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </div>
        </div>

        <div asp-validation-summary="All"></div>
    </form>
</div>
