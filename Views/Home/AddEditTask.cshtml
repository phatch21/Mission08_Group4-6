@{
}

@{
    ViewData["Title"] = "Add Task";
}

@model NewTask

<div class="container mt-4" style="max-width: 600px;">
    <form asp-action="AddEditTask" method="post" class="row g-3">

        <div class="row">
            <div class="col-12">
                <label for="TaskName" class="form-label">Task Name</label>
                <input type="text" id="TaskName" name="TaskName" class="form-control" required />
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-12">
                <label for="DueDate" class="form-label">Due Date</label>
                <input type="datetime-local" id="DueDate" name="DueDate" class="form-control"
                       value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-12">
                <label for="Quadrant" class="form-label">Quadrant</label>
                <select id="Quadrant" name="Quadrant" class="form-select" required>
                    <option value="">Select Quadrant</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-12">
                <label for="Category" class="form-label">Category</label>
                <select id="Category" name="Category" class="form-select" required>
                    <option value="">Select Category</option>
                    <option value="Home">Home</option>
                    <option value="School">School</option>
                    <option value="Work">Work</option>
                    <option value="Church">Church</option>
                </select>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-12">
                <label class="form-label">Completed?</label>
                <div class="form-check">
                    <input type="radio" name="Completed" value="true" id="CompletedYes" class="form-check-input" required>
                    <label for="CompletedYes" class="form-check-label">Yes</label>
                </div>
                <div class="form-check">
                    <input type="radio" name="Completed" value="false" id="CompletedNo" class="form-check-input" checked required>
                    <label for="CompletedNo" class="form-check-label">No</label>
                </div>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </div>
        </div>

    </form>
</div>
